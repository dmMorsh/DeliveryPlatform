{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=delivery_db;Username=postgres;Password=postgres;"
  },
  "Kafka": {
    "Brokers": "localhost:29092",
    "GroupId": "courier-service-group",
    "DefaultTopic": "courier.events",
    "Topics": ["order.events", "courier.events"],
    "DefaultPartitions": "3",
    "DefaultReplicationFactor": "1"
  },
  "gRPC": {
    "LocationTrackingService": {
      "Url": "https://localhost:7070"
    }
  },
  "AllowedHosts": "*"
}
